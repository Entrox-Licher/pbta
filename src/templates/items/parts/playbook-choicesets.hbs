<div>
	{{#each system.choiceSets}}
	<fieldset class="choiceset" data-id="{{@index}}">
		<div class="form-group">
			<label>Label</label>
			<div class="form-fields">
				<input type="text" name="system.choiceSets.{{@index}}.title" value="{{this.title}}" />
				<a style="flex: 0; margin: 3px;" type="button" data-action="delete-choiceset">
					<i class="fa fa-trash"></i>
				</a>
			</div>
		</div>
		<div class="form-group">
			<label>Description</label>
			<div class="form-fields">
				<input type="text" name="system.choiceSets.{{@index}}.desc" value="{{this.desc}}">
			</div>
		</div>
		<div class="form-group">
			<label>Grant On</label>
			<div class="form-fields">
				<select name="system.choiceSets.{{@index}}.grantOn">
					{{ selectOptions ../grantOptions selected=this.grantOn}}
				</select>
				<label>Advancement</label>
				<input type="number" name="system.choiceSets.{{@index}}.advancement" value="{{this.advancement}}" {{disabled (not this.grantOn)}}>
			</div>
		</div>
		<hr>
		{{#each this.choices}}
		<div class="form-group choiceset-item" data-uuid="{{this.uuid}}" data-id="{{@index}}">
			{{!-- TODO add visual for already granted item --}}
			<div class="item flexrow">
				<img style="flex: 0; margin-right: 3px;" src="{{this.img}}" height="32" width="32">
				<label>{{this.name}}</label>
			</div>
			<input type="text" name="system.choiceSets.{{@../index}}.choices.{{@index}}.uuid" value="{{this.uuid}}" hidden>
			<input type="text" name="system.choiceSets.{{@../index}}.choices.{{@index}}.img" value="{{this.img}}" hidden>
			<input type="text" name="system.choiceSets.{{@../index}}.choices.{{@index}}.name" value="{{this.name}}" hidden>
			<input type="checkbox" name="system.choiceSets.{{@../index}}.choices.{{@index}}.granted" {{checked this.granted}} hidden>
			<input type="number" name="system.choiceSets.{{@../index}}.choices.{{@index}}.advancement" value="{{this.advancement}}">
			<a style="flex: 0; margin: 3px;" data-action="delete-item">
				<i class="fa fa-trash"></i>
			</a>
		</div>
		{{/each}}
		<div style="margin: 3px; text-align: center;">Drop your items here</div>
	</fieldset>
	{{/each}}
	<footer>
		<a type="button" data-action="add-choiceset">
			<i class="fa fa-plus"></i>Add Item Grant
		</a>
	</footer>
</div>